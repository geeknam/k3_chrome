{
    "manifest_version": 2,

    "name": "Kogan.com Deals Notifications",
    "description": "Essential tool for Smart Shoppers!",
    "version": "1.3.7",

    "permissions": [
        "idle",
        "http://*/*",
        "https://*/*",
        "notifications",
        "background",
        "tabs",
        "cookies"
    ],
    "background": {
        "page": "background_page.html"
    },
    "content_scripts": [
        {
            "matches": ["http://*.harveynorman.com.au/*"],
            "js": [
                "js/angular.min.js",
                "js/settings.js",
                "js/content_scripts/harvey.js",
                "js/content_scripts/base.js"
            ]
        },
        {
            "matches": ["http://*.dicksmith.com.au/*"],
            "js": [
                "js/angular.min.js",
                "js/settings.js",
                "js/content_scripts/dicksmith.js",
                "js/content_scripts/base.js"
            ]
        },
        {
            "matches": ["http://*.jbhifi.com.au/*"],
            "js": [
                "js/angular.min.js",
                "js/settings.js",
                "js/content_scripts/jbhifi.js",
                "js/content_scripts/base.js"
            ]
        },
        {
            "matches": ["http://*.jbhifionline.com.au/*"],
            "js": [
                "js/angular.min.js",
                "js/settings.js",
                "js/content_scripts/jbhifionline.js",
                "js/content_scripts/base.js"
            ]
        },
        {
            "matches": ["http://*.officeworks.com.au/*"],
            "js": [
                "js/angular.min.js",
                "js/settings.js",
                "js/content_scripts/officeworks.js",
                "js/content_scripts/base.js"
            ]
        },
        {
            "matches": ["http://*.thegoodguys.com.au/*"],
            "js": [
                "js/angular.min.js",
                "js/settings.js",
                "js/content_scripts/thegoodguys.js",
                "js/content_scripts/base.js"
            ]
        },
        {
            "matches": ["http://*.amazon.com/*"],
            "js": [
                "js/angular.min.js",
                "js/settings.js",
                "js/content_scripts/amazon.js",
                "js/content_scripts/base.js"
            ]
        },
        {
            "matches": ["http://*.ebay.com.au/*"],
            "js": [
                "js/angular.min.js",
                "js/settings.js",
                "js/content_scripts/ebay.js",
                "js/content_scripts/base.js"
            ]
        },
        {
            "matches": ["http://*.facebook.com/*", "http://*.gumtree.com.au/*", "http://*.paypal.com/*", "http://*.apple.com/*"],
            "js": [
                "js/content_scripts/future.js"
            ]
        },
        {
            "matches": ["http://*.bigw.com.au/*"],
            "js": [
                "js/angular.min.js",
                "js/settings.js",
                "js/content_scripts/bigw.js",
                "js/content_scripts/base.js"
            ]
        },
        {
            "matches": ["http://*.dwidigitalcameras.com.au/*"],
            "js": [
                "js/angular.min.js",
                "js/settings.js",
                "js/content_scripts/dwi.js",
                "js/content_scripts/base.js"
            ]
        }
  ],

    "web_accessible_resources": [
        "icon.png"
    ],
    "externally_connectable": {
      "matches": ["https://www.kogan.com/*"]
    },
    "browser_action": {
        "default_icon": "icon.png",
        "default_popup": "popup.html"
    },
    "icons": {
        "16":"icon.png",
        "48":"icon.png",
        "128":"icon.png"
    }
}
